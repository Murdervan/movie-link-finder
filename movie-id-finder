<h1>ðŸŽ¬ Movie ID Finder</h1>
<p>SÃ¸g og se alle film med billeder & ID</p>

<input id="search" placeholder="Skriv fx: Crank" oninput="searchMovie()">

<div id="results"></div>

<script>
const API_KEY = "INDSÃ†T_DIN_TMDB_API_KEY";
const IMG = "https://image.tmdb.org/t/p/w200";

async function searchMovie() {
  const q = search.value.trim();
  const resultsDiv = document.getElementById("results");
  resultsDiv.innerHTML = "";

  if (q.length < 2) return;

  const res = await fetch(
    `https://api.themoviedb.org/3/search/movie?api_key=${API_KEY}&query=${encodeURIComponent(q)}`
  );
  const data = await res.json();

  for (const movie of data.results) {
    const detailsRes = await fetch(
      `https://api.themoviedb.org/3/movie/${movie.id}?api_key=${API_KEY}`
    );
    const details = await detailsRes.json();

    resultsDiv.innerHTML += `
      <div class="movie">
        <img src="${movie.poster_path ? IMG + movie.poster_path : ''}">
        <div>
          <h3>${movie.title} (${movie.release_date?.slice(0,4) || "N/A"})</h3>
          <div class="small">
            TMDB ID: ${movie.id}<br>
            IMDb ID: ${details.imdb_id || "N/A"}
          </div>
          <a href="https://www.imdb.com/title/${details.imdb_id}" target="_blank">IMDb</a> |
          <a href="https://www.themoviedb.org/movie/${movie.id}" target="_blank">TMDB</a>
        </div>
      </div>
    `;
  }
}
</script>

